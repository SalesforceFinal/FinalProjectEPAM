<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventCreatingToClosedTodo</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(ToDo__r.Status__c, &apos;Completed&apos;) || ISPICKVAL(ToDo__r.Status__c, &apos;Failed&apos;)</errorConditionFormula>
    <errorMessage>You cannot create new SubToDos to closed ToDos</errorMessage>
</ValidationRule>
